// Caught by catchE().
func catchE() {
    let arrayTest: RefArray<Int32> = RefArray<Int32>([0, 1, 2])
    try {
        throwE() // caught by catchE()
    } catch (e: Exception) {
        print("an ArrayIndexOutOfBoundsException happened: " )
    }
}

// Terminate function is executed.
func notCatchE() {
    let arrayTest: RefArray<Int32> = RefArray<Int32>([0, 1, 2])
    throwE()
}

